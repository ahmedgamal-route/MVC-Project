@model RegisterViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_RegistrationLayout.cshtml";
}



<div class="main-agileinfo">
    <div class="agileits-top">
        <div asp-validation-summary="All" class="text-danger"></div>
		<form asp-action="SignUp" asp-controller="Account">
			<div class="wthree-text">
				<input class="text email" type="email" asp-for="@Model.EmailAddress" placeholder="Email" required="">
				<span asp-validation-for="@Model.EmailAddress" class="text-danger"></span>
			</div>
			<div class="wthree-text">
				<input class="text" type="password" asp-for="@Model.Password" placeholder="Password" required="">
				<span asp-validation-for="@Model.Password" class="text-danger"></span>
			</div>
			<div class="wthree-text">
				<input class="text w3lpass" type="password" asp-for="@Model.ConfirmPassword" placeholder="Confirm Password" required="">
				<span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
			</div>
			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" asp-for="@Model.IsAgree" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Have an Account? <a asp-action="SignIn">Login Now!</a> </p>

    </div>

</div>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />

}
