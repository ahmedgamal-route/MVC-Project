@model IEnumerable<ApplicationRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>All Roles</h1>
<br />
<a asp-action="Create" class="btn btn-primary">Create New Role</a>
<br />


@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                
                <th>@Html.DisplayNameFor(role => role.Id)</th>
                <th>@Html.DisplayNameFor(role => role.Name)</th>
                <th>@Html.DisplayNameFor(role => role.CreatedAt)</th>


                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                   
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.CreatedAt.ToShortDateString()</td>

                    



                    <td>
                        <a class="btn btn-success" asp-controller="Roles" asp-action="Details" asp-route-id="@item.Id">
                            <i class="fa-eye"></i> Details
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Roles" asp-action="Update" asp-route-id="@item.Id">
                            <i class="fa-edit"></i> Update

                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-controller="Roles" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fa-trash"></i> Delete

                        </a>
                    </td>


                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert-warning">
        <h3>No Roles Found!!</h3>
    </div>
}

